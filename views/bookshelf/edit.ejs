<% include ../partials/header%>
<div class="container">
<div class="row">
<h1 style="text-align:center">Edit Your Post about  <%=book.title%></h1>
<div style="width:30%; margin:25px auto;">
<form action="/books/<%=book._id%>?_method=PUT" method="POST">
<div class="form-group">
<input class="form-control" type="text" name="book[name]" value="<%=book.title%>">
</div>
<div class="form-group">
<input class="form-control" type="text" name="book[image]" value="<%=book.image%>">
</div>
<div class="form-group">
<input class="form-control" type="text" name="book[description]" value="<%=book.description%>">
</div>
<div class="form-group">
<button class="btn btn-lg btn-primary btn-block">Submit</button>
</div>



</form>
<a href="/books">Go Back</a>
</div>

</div>
</div>
<% include ../partials/footer%>