<% include ../partials/header %>   
 <div class="container">
     <header class="jumbotron">
         <div class="container">
             <h1>WelCome To BookShelf</h1>
<p>So many books, so little time</p>
<p>
<a class="btn btn-primary btn-large" href="/books/new">Add a New Read</a>
             </p>
         </div>
     </header>
     
     <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% books.forEach(function(book){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                   <img src="<%= book.image %>">
                   <div class="caption">
                       <h4><%= book.title %></h4>
                   </div>
                   <p>
                   <a href="/books/<%=book._id%>" class="btn btn-primary">Explore</a>
                   </p>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<% include ../partials/footer %>
